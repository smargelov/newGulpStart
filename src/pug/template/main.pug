include ../utils/mixins
block variables

doctype html
html(lang="ru-RU")
    head
        meta(charset="utf-8")
        title #{title}
        meta(name="viewport" content="width=device-width,initial-scale=1")
        meta(name="description" content=description)
        if keywords || site.keywords
            meta(name="keywords" content=keywords || site.keywords)
        link(rel="stylesheet" type='text/css' href="css/styles.css")
        include ../modules/header/favicon
        include ../modules/header/og
    body
        include ../modules/header/header
        main.content
            block content
        include ../modules/footer/footer
        script(src="js/main.js")
        block script
